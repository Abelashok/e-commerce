    <section>
     <div class="container mt-5">
        <div class="row">
          {{#each products}}
            <div class="col-md-3">
               <div class="card" style="width: 15rem;height:30rem">
                   <img class="card-img-top" src="/product-images/{{this._id}}.jpg" >
                   <div class="card-body">
                   <h5 class="card-title">{{this.name}}</h5>
                   <p class="card-text">{{this.description}}</p>
                    <p class="card-text">{{this.category}}</p>
                     <p class="card-text">Rs.{{this.price}}</p>
                     <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">Add To Cart</a>
                 
                   </div>
                </div>
            </div>
            {{/each}}
        </div>
     </div>
    </section>
 
