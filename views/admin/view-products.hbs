<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-product" class="btn btn-success ml-auto mt-4">add product</a>
        </div>

        <table class="table " id="productsTable">
  <thead>
    <tr>
  
      <th scope="col">name</th>
      <th scope="col">category</th>
      <th scope="col">description</th>
      <th>image</th>
      <th>options</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      
      <td>{{this.name}}</td>
      <td>{{this.category}}</td>
      <td>{{this.description}}</td>
      <td><img style="width:50px;height:50px" src="/product-images/{{this._id}}.jpg" alt=""</td>
      <td>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('are you sure of delete {{this.name}}')">Delete</a>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-info">Edit</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>
<script>
  $(function(){
    $('#productsTable').DataTable();
  });
</script>